<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greybrwhite_bg"
        android:layout_margin="5dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu_1"
        android:id="@+id/menu_image" />

    <TextView
        android:text="Menu Item - "
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/menu_name"
        android:textSize="20dp"
        android:maxLines="2"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textColor="@color/black"/>
    <TextView
        android:text="$"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="150dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/menu_name"
        android:gravity="center|left"
        android:id="@+id/menu_amount"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/Addbutton"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@id/menu_name"
        android:background="@drawable/accent_round"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="ADD"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:id="@+id/Ordercount_layout"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            android:layout_below="@id/menu_name"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/Order_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/minus"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/Order_count"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="00"
                android:maxLength="2"
                android:layout_centerInParent="true"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/Order_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/plus"
                android:layout_alignParentRight="true"
                android:text=""/>
        </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
