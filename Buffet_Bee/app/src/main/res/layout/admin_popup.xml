<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="400dp"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:background="@drawable/white_oval">
       <ImageView
           android:id="@+id/image"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_margin="10dp"
           android:src="@drawable/security"
           android:layout_centerHorizontal="true"
           android:layout_alignParentTop="true"/>
       <ImageView
           android:id="@+id/Backbutton"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:padding="12dp"
           android:src="@drawable/close"
           android:tint="@color/ashaaa"
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true" />
       <TextView
           android:id="@+id/password_header"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:minHeight="40dp"
           android:text="Enter Password to unlock settings"
           android:textColor="@color/black"
           android:textSize="18dp"
           android:textStyle="bold"
           android:layout_below="@+id/image"/>
       <EditText
           android:id="@+id/Enter_password"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:hint="Enter Password"
           android:textColorHint="@color/ashaaa"
           android:layout_below="@+id/password_header"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:gravity="center"
           android:textSize="18dp"
           android:focusableInTouchMode="true"
           android:cursorVisible="false"
           android:inputType="textPassword"
           android:paddingLeft="8dp"
           android:paddingRight="8dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_centerHorizontal="true"
           android:background="@drawable/greybrwhite_bg"/>
       <TextView
           android:id="@+id/Submit_button"
           android:layout_width="120dp"
           android:layout_height="36dp"
           android:text="Submit"
           android:textSize="20dp"
           android:gravity="center"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:layout_marginTop="10dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="10dp"
           android:layout_alignParentRight="true"
           android:layout_below="@id/Enter_password"
           android:background="@drawable/accent_round"/>
   </RelativeLayout>
</RelativeLayout>