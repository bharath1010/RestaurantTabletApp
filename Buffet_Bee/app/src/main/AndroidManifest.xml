<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.falconnect.buffetbee">

    <action android:name="android.intent.action.MAIN" />

    <category android:name="android.intent.category.HOME" />
    <category android:name="android.intent.category.DEFAULT" />
    <category android:name="android.intent.category.MONKEY" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".DashboardActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".OrderviewActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".BillviewActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PaymentActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CartActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".RatingActivity" />
        <activity android:name=".GamesActivity" />
        <activity
            android:name=".WebActivity"
            android:hardwareAccelerated="true" />
        <activity android:name=".CashpaymentActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".OffersActivity" />
        <activity android:name=".FeedbackActivity" />
        <activity android:name=".MenuviewActivity"></activity>
    </application>

</manifest>